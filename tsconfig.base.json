{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "packages/*"
      ],
      "@backend/*": [
        "apps/backend/src/*"
      ],
      "@frontend/*": [
        "apps/frontend/*"
      ],
      "@sed-shop/shared-schemas": [
        "packages/shared-schemas/src"
      ]
    }
  },
  "files": [
    "types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo"
  ]
}