{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node", "vite/client"]
  },
  "include": ["*.ts", "*.vue", "components/**/*.vue", "layouts/**/*.vue", "pages/**/*.vue", "plugins/**/*.ts", "composables/**/*.ts", "stores/**/*.ts", "app.vue"],
  "exclude": ["node_modules", "dist", ".nuxt"]
}
